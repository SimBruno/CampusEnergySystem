# Data source: Swiss Energyscope
# Data source: P.Stadler et al, Contribution of Model Predictive Control in the Integration of Renewable Energy Sources within the Built Environment,2018
# Assumption: interest rate 3%
 
/*---------------------------------------------------------------------------------------------------------------------------------------
Set the efficienc of the boiler  
---------------------------------------------------------------------------------------------------------------------------------------*/
param eff_Boil :=0.9;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set flow rate of natural gas as a function of efficiency
---------------------------------------------------------------------------------------------------------------------------------------*/
let Qheatingsupply['Boiler']:=10000;
let Flowin['Natgas','Boiler'] := Qheatingsupply['Boiler'] / eff_Boil; 

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the maximum scaling factor
---------------------------------------------------------------------------------------------------------------------------------------*/
let  Fmax['Boiler'] := 10;
let  Fmin['Boiler'] := 0.1;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the minimum temperature of the boiler
---------------------------------------------------------------------------------------------------------------------------------------*/
let Tminheating['Boiler'] := 120;

/*---------------------------------------------------------------------------------------------------------------------------------------
Set the cinv2 of the boiler
---------------------------------------------------------------------------------------------------------------------------------------*/
let cinv1["Boiler"]:=0.087*3800;#288.6196;
let cinv2["Boiler"]:=0.087*105*Qheatingsupply['Boiler'];#797500; #  CHF/yr         900 CHF/kW/yr---> refsize=1000 kW
